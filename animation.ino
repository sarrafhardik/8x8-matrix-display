void dispImg(uint64_t slide) {
  for (int i = 0; i < 8; i++) {
    int r = row[i];
    digitalWrite(r, LOW);
    
    byte row = (slide >> i*8) & 0xFF;
    for (int j = 0; j < 8; j++) {
      if (bitRead(row, j) == 1) {
        digitalWrite(col[j], HIGH);
      }
      else {
        digitalWrite(col[j], LOW);
      }
    }

    delay(1);
    digitalWrite(r, HIGH);
  }
}

void displayAnimation(int fps, int k, const uint64_t slides[]) {
  uint64_t image;
  for (int i=0, t=1000/fps; i < k; i++) {
    memcpy_P(&image, &slides[i], 8);
    for(int i = 0; i < fps; i++){
      dispImg(image);
    }
    
  }
}
